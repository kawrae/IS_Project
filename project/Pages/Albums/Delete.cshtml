@page "{id:int}"
@model project.Pages.Albums.DeleteModel
@{
    ViewData["Title"] = "Delete Album";
}

<h2>Delete Album</h2>

<form method="post">
    <input type="hidden" asp-for="Album.AlbumId" />

    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this album?</strong>
    </div>

    <p><strong>Title:</strong> @Model.Album.Title</p>
    <p><strong>Artist:</strong> @Model.Album.Artist?.Name</p>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
